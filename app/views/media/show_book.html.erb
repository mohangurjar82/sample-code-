<div class="uk-panel media">
  <h1>
    <%= @media.title %>
    <div class="uk-panel-badge uk-badge"><%= @media.category_name %></div>
  </h1>
  <div class="uk-grid">
    <div class="uk-width-1-3">
      <img src="<%= @media.thumbnail_url %>" alt="">
      <div class="clearfix"></div>
      <br><br>
      <a href="<%= @media.file_url %>" class="uk-button">Download book</a>
    </div>
    <div class="uk-width-2-3">
      <h2><%= @media.title %></h2>
      <h3><%= @media.author %></h3>
      <div class="uk-panel">
        <%= @media.description.html_safe %>
      </div>
    </div>
  </div>
</div>
