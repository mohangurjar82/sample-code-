<div class="container" id="user_profile">
  <div class="col-md-10 col-md-offset-1">
    <div class="md-card">
      <div class="user_heading">
        <div class="user_heading_avatar">
          <div class="img-circle img-thumbnail text-center">
            <img alt="user avatar" src="/img/avatars/user.png" />
            <div class="dropdown profile-image-change-text">
              <span class=" dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true"><i class="fa fa-pencil"></i></span>
              <ul class="dropdown-menu">
                <li class="header text-center">
                  Change Avatar
                  <button type="button" class="close"><span>×</span></button>
                </li>
                <li role="separator" class="divider"></li>
                <li class="item updated-picture" style="display: none;"> <a></a><i class="fa"></i></li>
                <li class="item use-gravatar"> 
                  <a>
                    <img alt="user avatar" src="<%= current_user.gravatar %>" /> 
                    <span> Gravatar </span>
                    <i class="fa"></i>
                  </a> 
                </li>
                <li class="item default-avatar"> 
                  <a class="selected">
                    <img alt="user avatar" src="/img/avatars/user.png" />
                    <span>Initials (no avatars)</span> 
                    <i class="fa"></i>
                  </a>
                </li>
                <li role="separator" class="divider"></li>
                <li><a href="#"><i class="fa fa-paperclip" aria-hidden="true"></i>Upload a new picture</a></li>
              </ul>
            </div>


          </div>
        </div>
        <div class="user_heading_content">
          <h3 class="heading_b uk-margin-bottom">
            <span class="uk-text-truncate">
            Welcome 
            <%= current_user.display_name %>
            </span>
          </h3>
        </div>
        <a class="md-fab md-fab-small md-fab-accent"
           href="<%= edit_user_registration_path %>">
           <i class="material-icons">
             
           </i>
        </a>
      </div>
      <div class="user_content">
        <ul class="uk-tab nav nav-tabs" id="user_profile_tabs">
          <li class="uk-active active">
            <a href="#about">
              About
            </a>
          </li>
          <li>
            <a href="#subscription">
              Subscriptions
            </a>
          </li>
          <li>
            <a href="#favorites">
              Favorites
            </a>
          </li>
          <li>
            <a href="#recently-watched">
              Recently Watched
            </a>
          </li>
        </ul>
        <div id="user_profile_tabs_content" class="tab-content">
          <div class="uk-switcher uk-margin tab-pane active" id="about">
            <%= render 'users/registrations/profile/about' %>
          </div>
          <div class="uk-switcher uk-margin tab-pane" id="subscription">
            <%= render 'users/registrations/profile/subscription' %>
          </div>
          <div class="uk-switcher uk-margin tab-pane" id="favorites">
            <%= render 'users/registrations/profile/favorites' %>
          </div>
          <div class="uk-switcher uk-margin tab-pane" id="recently-watched">
            <%= render 'users/registrations/profile/recently_watched' %>
          </dov>
        </div>
      </div>
    </div>
  </div>
</div>