<!--Banner Start-->
<div class="cp_inner-banner">
  <div class="container">
    <div class="cp-inner-banner-holder">
      <h2>Cart: <strong>Choose a Package</strong></h2>
      <!--Breadcrumb Start-->
      <ul class="breadcrumb">
        <li><span><a href="#">Buy Indiviudal Channels starting @ $0.99</a></li>

      </ul><!--Breadcrumb End-->
    </div>
  </div>
</div><!--Banner End-->
<!--Main Content Start-->
<div id="cp-main-content">
  <section class="cp-section pd-tb60">
    <div class="container">
      <!-- Cart -->
      <section class="cart">
        <div class="container">
          <div class="row">



            <div class="col-md-8">

              <div class="cart-item">
                <div class="item-image-container">
                  <a href="#"><img src="<%= p.picture %>" class="img-responsive" alt="#"></a>
                </div>
                <div>&nbsp;</div>
                <div class="item-details">

                  <h5><%= p.title &> </h5>
                  <p><%= p.price &> </p>
                  <a href="#" class="item-action remove-from-cart"><i class="ion-ios-trash-outline"></i>See full Channel Lineup</a>
                  <a href="#" class="item-action remove-from-cart"><i class="ion-ios-trash-outline"></i> Remove</a>

                </div>
              </div>

            </div>

            <div class="col-md-4">
              <div class="cart_totals">
                <h5>Your Order</h5>
                <table cellspacing="0">
                  <tbody>
                  <tr class="cart-subtotal">
                    <th>2 Items</th>
                    <td><span class="amount">$131</span></td>
                  </tr>
                  <tr class="shipping">
                    <th>Delivery</th>
                    <td><span>$7.99</span></td>
                  </tr>
                  <tr class="cart-returns">
                    <th>Returns</th>
                    <td><span class="amount">Free for 90 days</span></td>
                  </tr>
                  <tr class="order-total">
                    <th>Total</th>
                    <td><strong><span class="amount">$138.99</span></strong> </td>
                  </tr>
                  </tbody>
                </table>
              </div>
              <a href="#" class="btn btn-primary btn-md btn-appear btn-cart-checkout"><span>Place Your Order <i class="ion-ios-arrow-forward"></i></span></a>
              <p class="bold" align="center">Free 7 Day Trial!</p>
              <p class="small-print">By clicking 'Place your order', you agree to the <a href="#" class="highlight">Terms &amp;<br>Conditions</a></p>

            </div>

          </div>
        </div>
      </section>
      <!-- Cart -->

      <!--Outer Holder End-->
    </div>
  </section>

  <!--Main Content End-->

